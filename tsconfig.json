{
  "compilerOptions": {
    "lib": ["es2017"],
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["config/**/*", "src/**/*"],
  "exclude": ["node_modules/**/*", "**/*.spec.ts"]
}
